<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PlaylistEditor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PlaylistEditor.Views.PlaylistControl"
			 Name="PlaylistControl"
			 DragDrop.AllowDrop="True">
	<UserControl.DataTemplates>
		<DataTemplate DataType="{x:Type vm:PlaylistItemViewModel}">
			<StackPanel>
				<TextBlock Text="{Binding Title}" />
				<Image Width="160" Height="120" Source="{Binding Image.Value}" />
			</StackPanel>
		</DataTemplate>
	</UserControl.DataTemplates>

	<DockPanel>
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
			<TextBlock Text="{Binding Title}" />
			<Button Content="Delete" Command="{Binding DeletePlaylist}" />
		</StackPanel>
		<ListBox Name="PlaylistControlListBox" DockPanel.Dock="Bottom" Items="{Binding PlaylistItemViewModels}"  SelectedItem="{Binding SelectedItem.Value}">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Horizontal" />
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
		</ListBox>
	</DockPanel>
</UserControl>
