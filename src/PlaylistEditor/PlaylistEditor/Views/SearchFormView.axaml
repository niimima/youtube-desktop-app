<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PlaylistEditor.Views.SearchFormView">
	<StackPanel>
		<StackPanel Margin="5"
					Orientation="Horizontal">
			<TextBlock VerticalAlignment="Center" Margin="10">Search : </TextBlock>
			<TextBox Name="m_SearchWordTextBox" Height="20" Width="215" Watermark="Search Word">
				<TextBox.KeyBindings>
					<KeyBinding Gesture="Enter" Command="{Binding Search}"
								CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Text}"/>
				</TextBox.KeyBindings>
			</TextBox>
		</StackPanel>
		<StackPanel Margin="5" >
			<TextBlock VerticalAlignment="Center" Margin="10">Search Option: </TextBlock>
			<TextBox Margin="10" Height="100" Width="280" Watermark="Search Option"/>
		</StackPanel>
		<Button HorizontalAlignment="Right" Margin="5"
				Command="{Binding Search}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Text}">
			Search
		</Button>
	</StackPanel>
</UserControl>
